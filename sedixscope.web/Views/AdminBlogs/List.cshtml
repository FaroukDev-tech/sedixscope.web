@model List<sedixscope.web.Models.Domain.BlogPost>

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>All Blog Posts - Admin Functionality</h1>
    </div>
</div>

<div class="container py-5">
    @if (Model != null && Model.Any())
    {
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Heading</th>
                    <th scope="col">Tags</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var blogPost in Model)
                {
                    <tr>
                        <th scope="row">@blogPost.Id</th>
                        <td>@blogPost.Heading</td>
                        <td>
                            <div class="d-flex">
                                @foreach (var tag in blogPost.Tags)
                                {
                                    <span class="badge bg-secondary me-1">@tag.Name</span>
                                }
                            </div>
                        </td>
                        <td><a asp-area="" asp-controller="AdminBlogs" asp-action="Edit" asp-route-id="@blogPost.Id">Edit</a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else 
    {
        <p>No Blog Posts Available yet!</p>
    }
</div>